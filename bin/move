# Code your CLI Here
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
def update_board(board, index, value="X")
  board[index] = value
end

puts "Welcome to Tic Tac Toe!"
puts "#{board}"
puts "Where would you like to go?"
user_input = gets.strip
puts "#{input_to_index(user_input)}"
puts "#{update_board(board, index, value="X")}: